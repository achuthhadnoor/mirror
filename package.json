{
  "name": "mirror",
  "version": "0.0.1",
  "description": "A minimal mirror app for your favorite zoom calls ",
  "main": "main.js",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make"
  },
  "repository": "https://github.com/achuthhadnoor/mirror",
  "keywords": [
    "Electron",
    "quick",
    "start",
    "tutorial",
    "demo"
  ],
  "author": "GitHub",
  "license": "CC0-1.0",
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.55", 
    "@electron-forge/maker-dmg": "^6.0.0-beta.55", 
    "@electron-forge/maker-zip": "^6.0.0-beta.55",
    "electron": "^11.1.1"
  },
  "dependencies": {
    "electron-squirrel-startup": "^1.0.0",
    "node-mac-permissions": "^2.2.0"
  },
  "config": {
    "forge": {
      "packagerConfig": {},
      "makers": [ 
        {
          "name": "@electron-forge/maker-dmg",
          "config": {
            "icon": "icon.png",
            "format": "ULFO"
          }
        }
      ]
    }
  }
}
